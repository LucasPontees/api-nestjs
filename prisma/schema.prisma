generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  login     String
  name      String
  email     String   @unique
  password  String
  deleted   Deletado @default(N)
  avatarUrl String?

  role Role @default(CLIENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum Role {
  CLIENT
  ADMIN
  ROOT
}

enum Deletado {
  S
  N
}
